package utils.camera{		import flash.media.*;	import flash.display.*;	import flash.geom.*;		//				//		public function setupCamera(camPosition:String, xs:Number, ys:Number, w:int,h:int, video:Video, camera:Camera, _frameRate:uint = 15, _invert:Boolean = false):Video {									try {				camera = getCamera(camPosition);			} catch(e:Error) {								camera = getCamera("back");			}						camera.setMode(w,h,_frameRate,true);			camera.setQuality(0, 100);		   			video = new Video(w,h);			video.smoothing = true;			video.attachCamera(camera);						video.x = xs;			video.y = ys;						//			if(!_invert){											}			else{				video.scaleX = -1; video.x = video.width + video.x;			}						return video		//fim do setup camera		}			}